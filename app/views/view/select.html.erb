    <%= form.select :publish, ['技術評論社', '翔泳社', '日経BP社'],
        { include_blank: '選択してください', disabled: @book.publish, selected: '翔泳社' }, class: 'pub' %>
    <br />

    <%= form.select :publish, { '技術評論社' => 1, '翔泳社' => 2, '日経BP社' => 3 } %>
    <br />

    <%= form.select(:publish, [['技術評論社', 1], ['翔泳社', 2], ['日経BP社', 3]]) %>
    <br />

    <%= form.select :publish, ['技術評論社', '翔泳社', '日経BP社'],
        { include_blank: '選択してください' }, multiple: true %>
    <br />
<% end %>