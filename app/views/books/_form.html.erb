<!-- form_withはform_forとform_tagの2役を担う（今回はform_forと同様の役割で使用）。 -->
<!-- form_forはモデルと関連付けて特定のテーブルにレコードを新規作成する際に用い、form_tagはモデルと関連付けずに特定のテーブルにレコードを新規作成する際に用いる。 -->
<%= form_with(model: book, local: true) do |form| %>
<!-- 入力値検証で発生したエラー情報を表示するためのコード -->
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<!-- 入力フォームを表示するコード -->
  <div class="field">
    <%= form.label :isbn %>
    <%= form.text_field :isbn %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.label :publish %>
    <%= form.text_field :publish %>
  </div>

  <div class="field">
    <%= form.label :published %>
    <%= form.date_select :published %>
  </div>

  <div class="field">
    <%= form.label :dl %>
    <%= form.check_box :dl %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
